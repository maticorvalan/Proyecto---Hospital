doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document
    link(rel="stylesheet", href="/css/styles.css")
  body(class="flex flex-col min-h-screen bg-gradient-to-b from-gray-50 via-emerald-50 to-blue-400")
    div(class="bg-white p-8 rounded-lg shadow-md mt-4 w-100 mx-auto")
      h1.text-2xl.font-bold.text-center.mb-6.text-gray-700
          | Hospital HIS

      div.text-center
        img(src="/images/logo.jpg" alt="Logo del Sistema HIS" class="mx-auto mb-4 h-35 object-cover")
      if error_msg.length
        .bg-red-100.border.border-red-400.text-red-700.px-4.py-3.rounded.mb-4
          each msg in error_msg
            p= msg
          
      form(action="/login" method="POST")
        .mb-4
          label.block.text-gray-700.text-sm.font-bold.mb-2(for="email") Usuario
          input#email.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight(type="text" name="email" placeholder="Ingrese su usuario" required)

        .mb-6
          label.block.text-gray-700.text-sm.font-bold.mb-2(for="password") Contraseña
          input#password.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.mb-3.leading-tight(type="password" name="password" placeholder="*********" required)

        .flex.items-center.justify-between
          button(class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit")
            | Iniciar Sesión