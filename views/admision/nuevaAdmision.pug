extends ../layout

block content

    section.mb-8
        h2.text-xl.font-semibold.text-gray-700.mb-4.pb-2.border-b.border-gray-200 Datos de la Admisión
        div(class="grid grid-cols-1 md:grid-cols-2 gap-6")
            //- Tipo de Admisión
            .mb-4
                label.block.text-gray-700.text-sm.font-bold.mb-2(for="tipoAdmision") Tipo de Admisión *
                select#tipoAdmision.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight(
                    name="tipoAdmision"
                    required
                    class="focus:outline-none focus:ring-2 focus:ring-blue-500"

                )
                    option(value="" disabled selected) Seleccione un tipo
                    each tipo in tipoAdmision
                        option(value=tipo)= tipo.nombre

            //- Médico Derivante
            .mb-4
                label.block.text-gray-700.text-sm.font-bold.mb-2(for="medicoDerivante") Médico Derivante
                input#medicoDerivante.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight(
                    type="text"
                    disabled
                    name="medicoDerivante"
                    placeholder="Nombre del médico"
                    class="focus:outline-none focus:ring-2 focus:ring-blue-500"
                )

            //- Fecha de Admisión
            .mb-4
                label.block.text-gray-700.text-sm.font-bold.mb-2(for="fechaAdmision") Fecha de Admisión
                input#fechaAdmision.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight(
                    type="datetime-local"
                    name="fechaAdmision"
                    class="focus:outline-none focus:ring-2 focus:ring-blue-500"
                )

        //- Motivo de Consulta
        .mt-6
            label.block.text-gray-700.text-sm.font-bold.mb-2(for="motivoConsulta") Motivo de Consulta *
            textarea#motivoConsulta.shadow.appearance-none.border.rounded.w-full.py-2.px-3.text-gray-700.leading-tight(
                name="motivoConsulta"
                rows="4"
                placeholder="Describa el motivo principal de la admisión..."
                required
                class="focus:outline-none focus:ring-2 focus:ring-blue-500"
            )

            
    script(src="/js/script.js")