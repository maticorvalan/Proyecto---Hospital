extends ../../layout

block content
  .max-w-2xl.mx-auto.p-6.bg-white.rounded-lg.shadow-md.mt-8
    h2.text-3xl.font-bold.text-gray-800.mb-6.text-center Datos del Paciente

    .space-y-4
      .flex.items-center.border-b.border-gray-200.pb-3
        .w-1x4.font-medium.text-gray-600 Nombre:
        .w-3x4.text-gray-800 #{pacienteEncontrado.nombre}
      
      .flex.items-center.border-b.border-gray-200.pb-3
        .w-1x4.font-medium.text-gray-600 DNI:
        .w-3x4.text-gray-800 #{pacienteEncontrado.dni}
      
      .flex.items-center.border-b.border-gray-200.pb-3
        .w-1x4.font-medium.text-gray-600 Dirección:
        .w-3x4.text-gray-800 #{pacienteEncontrado.direccion}
      
      .flex.items-center.border-b.border-gray-200.pb-3
        .w-1x4.font-medium.text-gray-600 Provincia:
        .w-3x4.text-gray-800 #{pacienteEncontrado.provincia.nombre}
      
      .flex.items-center
        .w-1x4.font-medium.text-gray-600 Email:
        .w-3x4.text-blue-600.underline
          a(href=`mailto:${pacienteEncontrado.email}`) #{pacienteEncontrado.email}

    //- Opcional: Botón de volver
    .mt-8.text-center
      a(href="/pacientes" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors")
        svg.w-5.h-5.mr-2(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
          path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18")
        | Volver a la lista
