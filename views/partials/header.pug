nav(class="max-w-[85rem] w-full mx-auto px-4 flex items-center justify-between")
  .flex.items-center.justify-between
    a(href="#" class="flex-none text-xl font-semibold focus:outline-hidden mt-1 focus:opacity-80" aria-label="HIS")
      span(class="inline-flex items-center gap-x-2 text-xl font-semibold text-gray-800")
        img(src="/images/icon/icon-navbar.svg" alt="iconNavbar" class="w-9 h-9")
        | HIS

  #hs-navbar-example(class="hidden hs-collapse overflow-visible transition-all duration-300 basis-full grow sm:block" aria-labelledby="hs-navbar-example-collapse")
    .flex(class="flex-col gap-5 mt-5 sm:flex-row sm:items-center sm:justify-end sm:mt-0 sm:ps-5")
      a(href="/inicio" class="font-medium text-blue-600 hover:text-blue-800 transition-colors") Inicio
      
      .relative
        button#account-menu-button(
          type="button"
          class="inline-flex items-center gap-x-1.5 text-gray-700 hover:text-gray-900 font-medium focus:outline-none transition"
          aria-expanded="false"
        )
